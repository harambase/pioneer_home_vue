<!DOCTYPE html>
<html xmlns:th="http://www.w3.org/1999/xhtml" xmlns:v-on="http://www.w3.org/1999/xhtml">
<head th:include="/thymeleaf/header :: header('先锋教育::学校组织架构')"></head>
<body>
<!-- header -->
<div th:include="/thymeleaf/navTop :: navtop(3)" class="sidebar-collapse"></div>
<!-- //header -->

<!-- instrument-section -->
<section class="instrument-section">
    <div class="inner-banner demo-2 text-center">
        <div id="breadcrumb_wrapper">
            <div class="container">
                <h2>School Organizations</h2>
                <h6>学校组织架构</h6>
            </div>
        </div>
    </div>
    <!--- instrument ---->
    <div class="instrument">
        <div class="container">
            <h3 class="last-updated"> 学校核心机构人员
                <small>Core Member</small>
            </h3>
            <div class="instrument-view">
                <div class="col-md-6 ins-image">
                    <img th:src="@{'/static/images/organization/' + ${param.name[0]} + '_1.jpg'}" title="instrument" alt=""/>
                </div>
                <div id="detail">
                    <div v-for="(item, index) in staffList" :key="item.id">
                        <div v-if="item.id === id" class="col-md-6 ins-details">
                            <div class="ins-name">
                                <h3>{{item.name}} {{item.enName}}
                                    <small>{{item.jobTitle}}</small>
                                </h3>
                                <p>{{item.shortDescription}}</p>
                                <p>{{item.enDescription}}</p>
                            </div>
                            <div v-for="(list, i) in item.moreInfo" :key="list.id">
                                <div v-if="i%2==0" class="span span1">
                                    <p class="left">{{list.id}}</p>
                                    <p class="right">{{list.description}}</p>
                                    <div class="clearfix"></div>
                                </div>
                                <div v-if="i==(item.moreInfo.length-1)" class="span span4">
                                    <p class="left">{{list.id}}</p>
                                    <p class="right">{{list.description}}</p>
                                    <div class="clearfix"></div>
                                </div>
                                <div v-if="i%2==1 && i!=(item.moreInfo.length-1)" class="span span2">
                                    <p class="left">{{list.id}}</p>
                                    <p class="right">{{list.description}}</p>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clerfix"></div>
            </div>
        </div>
    </div>
    <!--- /instrument ---->
</section>
<!-- //instrument-section -->

<!-- footer -->
<div th:include="/thymeleaf/footer :: footer" id="copyright"></div>
<!-- //footer -->

<!-- script -->
<div th:include="/thymeleaf/js :: load_js"></div>
<!-- //script -->
<a href="#" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
<script src="/static/scripts/vue.min.js"></script>
<script>
    new Vue({
        el: '#detail',
        data: {
            id: getQueryString("name"),
            staffList: getStaffList(),
        }
    });
</script>
</body>
</html>